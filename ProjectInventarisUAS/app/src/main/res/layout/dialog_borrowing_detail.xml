<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/close"
                android:padding="4dp"
                android:src="@drawable/ic_close"
                app:tint="@android:color/black" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/containerDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/borrowing_code"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etBorrowingCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="BRW-20230525-001" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/item_name"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="Cable HDMI" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/date_borrowed"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etDateBorrowed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="25 May 2023" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/borrowing_hours"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etStartHours"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_edittext"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:padding="10dp"
                                android:textSize="14sp"
                                tools:text="09:00 AM" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="8dp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/to"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/etEndHours"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_edittext"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:padding="10dp"
                                android:textSize="14sp"
                                tools:text="05:00 PM" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/student_name"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etStudentName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="John Doe" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/student_phone_number"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/etStudentPhoneNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_edittext"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:padding="10dp"
                                android:textSize="14sp"
                                tools:text="081234567890" />

                            <android.widget.Button
                                android:id="@+id/btnStudentPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_button_primary"
                                android:contentDescription="@string/call_student"
                                android:drawableEnd="@drawable/ic_phone_calling"
                                android:drawableTint="@color/white"
                                android:minWidth="24dp"
                                android:minHeight="24dp"
                                android:padding="8dp"
                                android:visibility="gone"
                                app:drawableTint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/admin_name"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etAdminName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="Jane Smith" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/admin_phone_number"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/etAdminPhoneNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_edittext"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:padding="10dp"
                                android:textSize="14sp"
                                tools:text="081234567891" />

                            <android.widget.Button
                                android:id="@+id/btnAdminPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:minHeight="24dp"
                                android:minWidth="24dp"
                                android:background="@drawable/bg_button_primary"
                                android:drawableEnd="@drawable/ic_phone_calling"
                                android:contentDescription="@string/call_admin"
                                app:drawableTint="@color/white"
                                android:drawableTint="@color/white"
                                android:padding="8dp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/last_location"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/etLastLocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_edittext"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:padding="10dp"
                                android:textSize="14sp"
                                tools:text="0.478231,101.382194" />

                            <android.widget.Button
                                android:id="@+id/btnOpenMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:minHeight="24dp"
                                android:minWidth="24dp"
                                android:background="@drawable/bg_button_primary"
                                android:drawableEnd="@drawable/ic_location"
                                android:contentDescription="@string/open_map"
                                app:drawableTint="@color/white"
                                android:drawableTint="@color/white"
                                android:padding="8dp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/return_time"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etReturnTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="25 May 2023, 04:30 PM" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/status"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/rounded_edittext"
                            android:enabled="false"
                            android:fontFamily="@font/poppins"
                            android:padding="10dp"
                            android:textSize="14sp"
                            tools:text="Borrowed" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <android.widget.Button
                            android:id="@+id/btnCancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_cancle"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/tv_cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <android.widget.Button
                            android:id="@+id/btnEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_edit"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/edit"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <android.widget.Button
                            android:id="@+id/btnSave"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_primary"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>